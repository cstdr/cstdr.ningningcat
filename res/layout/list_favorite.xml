<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_favorites"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="false"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_favorites"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/iv_web_icon"
            android:layout_width="6dp"
            android:layout_height="52dp" />

        <TextView
            android:id="@+id/tv_web_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_web_icon"
            android:singleLine="true"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_web_url"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_web_title"
            android:layout_toRightOf="@id/iv_web_icon"
            android:singleLine="true"
            android:textSize="16sp" />
    </RelativeLayout>

</LinearLayout>