<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_website_navigation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3dp"
            android:src="@drawable/navigation_add" />

        <cstdr.ningningcat.widget.MyAutoCompleteTextView
            android:id="@+id/actv_website"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="42dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/iv_add"
            android:hint="@string/website_hint"
            android:inputType="textWebEditText"
            android:textColorHighlight="#0099CC" />

        <!-- android:background="@null" -->

        <ImageView
            android:id="@+id/iv_goto"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="3dp"
            android:layout_marginTop="6dp"
            android:background="@android:color/darker_gray"
            android:src="@drawable/navigation_goto" />
    </RelativeLayout>

    <cstdr.ningningcat.widget.MyWebView
        android:id="@+id/wv_web"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <WebView
        android:id="@+id/wv_notify"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>